# =================================
# Environment Variables
# =================================
# Copy this file to .env.local and fill in the values

# Server-side environment variables
API_URL=https://api.minihome.page
INTERNAL_API_KEY=your_internal_api_key_here
RESEND_API_KEY=your_resend_api_key_here

# Client-side environment variables (NEXT_PUBLIC_ prefix required)
NEXT_PUBLIC_APP_URL=https://minihome.page
NEXT_PUBLIC_API_URL=/api
NEXT_PUBLIC_RESEND_API_KEY=your_resend_public_key_here
NEXT_PUBLIC_R2_URL=https://your-r2-bucket.r2.dev

# Optional: Skip environment validation during build
# SKIP_ENV_VALIDATION=true
